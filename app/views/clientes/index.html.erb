<h3>Clientes</h3>
<a href="/clientes/new"><button class='btn'>Novo Cliente</button></a><br><br>

<table id="clientes_tab" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cnpj</th>
      <th>Contato</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Observacao</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
<% @clientes.each do |cliente| %>
  <tr>
    <td><%= cliente.nome %></td>
    <td><%= cliente.cnpj %></td>
    <td><%= cliente.contato %></td>
    <td><%= cliente.telefone %></td>
    <td><%= cliente.email %></td>
    <td><%= cliente.observacao %></td>
    <td>
      <%= link_to 'Exibir', cliente %>
      <%= link_to 'Alterar', edit_cliente_path(cliente) %>
      <%= link_to 'Apagar', cliente, method: :delete, data: { confirm: 'Deseja realmente apagar?' } %>
    </td>
  </tr>
  <% end %>
  </tbody>

</table>

<br />



<script type="text/javascript">
  $(document).ready(function(){
    $('#clientes_tab').dataTable({
       "oLanguage": {
      "sLengthMenu": "_MENU_ registros por página",
      "sZeroRecords": "Nenhum registro",
      "sInfo": "Exibindo _START_ de _END_ total _TOTAL_ registros",
      "sInfoEmpty": "Exibindo 0 de 0 de 0 registros",
      "sInfoFiltered": "(filtered from _MAX_ total records)"
    }
    });
  });

</script>