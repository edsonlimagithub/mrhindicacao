<h3>Relatório - Indicações</h3>
<table id='tab' class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>
				Data
			</th>
			<th>
				Cliente
			</th>
			<th>
				Indicador
			</th>
			<th>
				Servico
			</th>
			<th>
				Situação
			</th>
			<th>
				Comissão Paga
			</th>
		</tr>
	</thead>
	<tbody>

<% @indicacoes.each do |indicacao| %>
	<tr>
		<td>
			<%= indicacao.created_at.strftime("%d/%m/%Y") %>
		</td>
		<td>
			<% if indicacao.cliente %>
				<a href="#" data-toggle="tooltip" 
					title="Fone: <%= indicacao.cliente.telefone %> / Contato: <%= indicacao.cliente.contato %>">
					<%= indicacao.cliente.nome %>
				</a>
			<% else %>
				vazio
			<% end %>
		</td>
		<td>
			<%= indicacao.user.nome %>
		</td>
		<td>
			<a href="#" data-toggle="tooltip" 
				title="Detalhes: <%= indicacao.detalhes %>">
				<%= indicacao.servico.descricao %>
			</a>
		</td>
		<td>
			<%= (indicacao.concluida)? 'Concluida' : (indicacao.cancelado)? 'Cancelada' : 'Aberta' %>
			<%=  %>
		</td>
		<td>
			<%= indicacao.valor_comissao %>
		</td>
	</tr>
<% end %>
	</tbody>
</table>

<script type="text/javascript">
  
  $(document).ready(function(){
    $('#tab').dataTable({
		"oLanguage": {
			"scriptLengthMenu": "_MENU_ registros por página",
			"sZeroRecords": "Nenhum registro",
			"sInfo": "Exibindo _START_ de _END_ total _TOTAL_ registros",
			"sInfoEmpty": "Exibindo 0 de 0 de 0 registros",
			"sInfoFiltered": "(filtered from _MAX_ total records)"
		}
    });
  });

</script>
