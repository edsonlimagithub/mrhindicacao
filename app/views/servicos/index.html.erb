<h1>Listing servicos</h1>

<table>
  <tr>
    <th>Descricao</th>
    <th>Porcentagem</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @servicos.each do |servico| %>
  <tr>
    <td><%= servico.descricao %></td>
    <td><%= servico.porcentagem %></td>
    <td><%= link_to 'Show', servico %></td>
    <td><%= link_to 'Alterar', edit_servico_path(servico) %></td>
    <td><%= link_to 'Apagar', servico, method: :delete, data: { confirm: 'Deseja realmente apagar?' } %></td>
  </tr>
<% end %>
</table>

