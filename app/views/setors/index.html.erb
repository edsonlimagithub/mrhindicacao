<h3>Setores</h3>
<p>
<%= link_to 'Novo Setor', new_setor_path %>
</p>
<table id="table" class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Descricao</th>
    <th>Exibir</th>
    <th>Alterar</th>
    <th>Apagar</th>
  </tr>
</thead>
<tbody>
<% @setors.each do |setor| %>
  <tr>
    <td><%= setor.descricao %></td>
    <td><%= link_to 'Exibir', setor %></td>
    <td><%= link_to 'Editar', edit_setor_path(setor) %></td>
    <td><%= link_to 'Apagar', setor, method: :delete, data: { confirm: 'Confirma exclusão?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<script type="text/javascript">
  $(document).ready(function(){
    $('#table').dataTable({
    "oLanguage": {
      "sLengthMenu": "_MENU_ registros por página",
      "sZeroRecords": "Nenhum registro",
      "sInfo": "Exibindo _START_ de _END_ total _TOTAL_ registros",
      "sInfoEmpty": "Exibindo 0 de 0 de 0 registros",
      "sInfoFiltered": "(filtered from _MAX_ total records)"
    }
  });
  });

</script>



