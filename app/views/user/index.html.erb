<h3>Usuários</h3>
<%= link_to 'Novo Usuário', "/user/new"%>
<table id="usuarios_tab" class="table table-striped table-bordered">
<thead>
	<tr>
		<th>Nome</th>
		<th>Email</th>
		<th>Setor</th>
		<th>Papel</th>
		<th>Exibir</th>
		<th>Alterar</th>
		<th>Apagar</th>
	</tr>
</thead>
<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.nome %></td>
			<td><%= user.email %></td>
			<td><%= !user.setor.nil? ? user.setor.descricao : '' %></td>
			<td><%= !user.role.nil? ? user.role.descricao : ''   %></td>
			<td><%= link_to 'Exibir', user %></td>
    		<td><%= link_to 'Alterar', edit_user_path(user) %></td>
    		<td><%= link_to 'Apagar', user, method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
		</tr>
	<% end %>
</tbody>
</table>

<script type="text/javascript">
  
  $(document).ready(function(){
    $('#usuarios_tab').dataTable({
		"oLanguage": {
			"scriptLengthMenu": "_MENU_ registros por página",
			"sZeroRecords": "Nenhum registro",
			"sInfo": "Exibindo _START_ de _END_ total _TOTAL_ registros",
			"sInfoEmpty": "Exibindo 0 de 0 de 0 registros",
			"sInfoFiltered": "(filtered from _MAX_ total records)"
		}
    });
  });

</script>
